<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fabian.fxstarter.SettingsController">

    <Label fx:id="languageLbl" layoutX="182.0" layoutY="507.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0" />
    <ComboBox fx:id="languagePicker" onAction="#setLanguage" prefHeight="25.0" prefWidth="115.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="30.0" />
    <Label fx:id="autosaveLbl" layoutX="18.0" layoutY="507.0" AnchorPane.leftAnchor="145.0" AnchorPane.topAnchor="10.0" />
    <ToggleButton fx:id="autosaveSwitch" layoutX="18.0" layoutY="526.0" onAction="#toggleAutosave" styleClass="toggle-button" AnchorPane.leftAnchor="145.0" AnchorPane.topAnchor="30.0" />

    <Label fx:id="excelLbl" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="60.0" />
    <TextField fx:id="excelInput" prefWidth="300.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="80.0" />
    <Button fx:id="excelFileChoose" onAction="#fileChooserExcel" mnemonicParsing="false" AnchorPane.leftAnchor="330.0" AnchorPane.topAnchor="80.0" />

    <Label fx:id="settingLbl" layoutX="10.0" layoutY="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="110.0" />
    <TextField fx:id="settingsInput" prefWidth="300.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="130.0" />
    <Button fx:id="settingFileChoose" onAction="#fileChooserSettings" mnemonicParsing="false" AnchorPane.leftAnchor="330.0" AnchorPane.topAnchor="180.0" />

    <Label fx:id="productLbl" layoutX="10.0" layoutY="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="160.0" />
    <TextField fx:id="productInput" prefWidth="300.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="180.0" />
    <Button fx:id="productFileChoose" onAction="#fileChooserProducts" mnemonicParsing="false" AnchorPane.leftAnchor="330.0" AnchorPane.topAnchor="130.0" />

    <Button fx:id="save" onAction="#saveAndClose" mnemonicParsing="false" AnchorPane.leftAnchor="15.0" AnchorPane.bottomAnchor="15.0" />
</AnchorPane>
